properties([parameters([string(description: 'Enter your name', name: 'Name'), choice(choices: ['DEV', 'QA', 'UAT', 'PROD'], description: 'Where you want to deploy?', name: 'Environnment')])])

pipeline {
    agent any

    stages {
        stage('one') {
            steps {
                echo "dafa 1 ${Name} dfasdf ${Environnment} "
            }
        }
        stage('Two') {
            steps {
                echo "dafa 2 ${Name} dfasdf ${Environnment}"
            }
        }
        stage('Three') {
            steps {
                echo "dafa 3 ${Name} dfasdf ${Environnment}"
            }
        }
    }
}
