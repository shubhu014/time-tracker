pipeline {
    agent any

    stages {

        
        stage('Download CCCCCookbooksss') {
            steps {
                
                git 'https://github.com/shubhu014/Jenkins-Chef-Demo.git'
                
            }
        }
        stage('Upload cookbook to chef server') {
            steps {
                sh 'sudo mkdir -p /home/ubuntu/chef-repo/cookbooks/Jenkins-Chef-demo'
                sh 'mv /var/lib/jenkins/workspace/Jenkins-Chef/recipes /home/ubuntu/chef-repo/cookbooks/Jenkins-Chef-demo'
                
            }
        }
        
        
        
        
    }
}
