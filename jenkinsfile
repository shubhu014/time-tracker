properties([parameters([string(description: 'Enter your name', name: 'Name'), choice(choices: ['DEV', 'QA', 'UAT', 'PROD'], description: 'Where you want to deploy?', name: 'Environment')])])

pipeline {
    agent any

    stages {
        stage('one') {
            steps {
                echo 'Hello ${Name}, First Stage from SCM in ${Environment}'
            }
        }
        stage('Two') {
            steps {
                echo 'Hello ${Name}, Second Stage from SCM Git in ${Environment}'
            }
        }
        stage('Three') {
            steps {
                echo 'Hello ${Name}, Third Stage from SCM Git repo in ${Environment}'
            }
        }
    }
}
